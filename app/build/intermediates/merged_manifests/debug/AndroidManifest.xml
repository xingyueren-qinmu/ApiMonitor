<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softsec.mobsec.dae.apimonitor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="26" />

    <!-- 读写内部存储 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 联网 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.softsec.mobsec.dae.apimonitor.MyApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.softsec.mobsec.dae.apimonitor.ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.softsec.mobsec.dae.apimonitor.ui.ChooseAppActivity" />
        <activity android:name="com.softsec.mobsec.dae.apimonitor.ui.RecordListActivity" />
        <activity android:name="com.softsec.mobsec.dae.apimonitor.ui.RecordContentActivity" />

        <service
            android:name="com.softsec.mobsec.dae.apimonitor.service.MainService"
            android:exported="true" />

        <receiver android:name="com.softsec.mobsec.dae.apimonitor.broadcastreceiver.DaeBCReceiver" >
            <intent-filter>
                <action android:name="ACTION_DAE_TASK" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="82" />
        <meta-data
            android:name="xposeddescription"
            android:value="Monitor the senstive API that concern your private information " />
        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>